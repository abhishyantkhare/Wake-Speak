<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:gravity="center_horizontal"
    android:orientation="vertical" android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/spanishblue"
    tools:context="com.katgstudios.abhishyant.wakespeak.LoginActivity">

    <!-- Login progress -->
    <ProgressBar android:id="@+id/login_progress" style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_marginBottom="8dp" android:visibility="gone" />

    <LinearLayout android:id="@+id/email_login_form" android:layout_width="match_parent"
            android:layout_height="wrap_content" android:orientation="vertical">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:src="@drawable/logo"
            android:id="@+id/imageView" />


        <AutoCompleteTextView android:id="@+id/email" android:layout_width="match_parent"
               android:hint="@string/prompt_email"
               android:maxLines="1"

                android:singleLine="true"
                android:layout_height="40dp"
                android:background="#FFFFFF"
                android:layout_marginTop="46dp"
                android:layout_marginBottom="10dp"
                />

        <EditText android:id="@+id/password" android:layout_width="match_parent"
                android:inputType="textPassword"
                android:hint="@string/password_hint"
                android:layout_height="40dp"


                android:background="#FFFFFF"



                android:maxLines="1" android:singleLine="true" />

            <Button android:id="@+id/email_sign_in_button" style="?android:textAppearanceSmall"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:layout_marginTop="16dp" android:text="@string/action_sign_in"

                android:elevation="16dp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textColor="#FFFFFF"
                android:text="Don't have an account?"
                />
            <Button android:id="@+id/goto_register_button" style="?android:textAppearanceSmall"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:layout_marginTop="22dp" android:text="@string/register_button"
                android:textStyle="bold" />

        </LinearLayout>


</LinearLayout>



